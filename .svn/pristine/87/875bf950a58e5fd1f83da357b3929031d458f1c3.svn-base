<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:color="?android:colorControlNormal" tools:targetApi="lollipop">

    <item android:id="@android:id/mask" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@color/color_transparent_99" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/color_transparent_55" />
        </shape>
    </item>

</selector>