<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:color="?android:colorControlNormal" tools:targetApi="lollipop">

    <item android:id="@android:id/mask" android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<corners android:radius="5dp" />-->

            <stroke android:width="0.5sp" android:color="@color/colorPrimary" />
            <solid android:color="@color/colorPrimaryDark_5" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<corners android:radius="5dp" />-->
            <stroke android:width="0.5sp" android:color="@color/color_gray" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

</selector>