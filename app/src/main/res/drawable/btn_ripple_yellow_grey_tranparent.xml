<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/color_transparent_22">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/color_app_light_5" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/color_transparent_22" />
        </shape>
    </item>

</selector>